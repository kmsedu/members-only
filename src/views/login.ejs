<!DOCTYPE html>
<html lang="en">

<%- include("head"); %>

<body>
    <%- include("header"); %>

    <form action="" method="post">
        <label for="username">
            <span>Username:</span>
            <input type="text" name="username" id="username" required>
        </label>
        <label for="password">
            <span>Password:</span>
            <input type="password" name="password" id="password" required>
        </label>
        <button>Sign in</button>
    </form>

    <% if (errors && errors.length !== 0) { %>
        <% for (const error of errors) { %>
            <p><%= error %></p>
        <% } %>
    <% } %>

</body>
</html>
