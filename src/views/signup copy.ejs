<!DOCTYPE html>
<html lang="en" class="h-full">
    <%- include("head"); %>

    <body class="h-full">
        <main class="flex flex-1 h-full">
            <div class="hidden bg-red-500 md:flex md:flex-1 lg:flex-1">
                <a class="rounded-e-full bg-white bg-opacity-20 flex w-36 pt-1 justify-center items-center max-h-[64px] text-white text-2xl font-title font-extrabold transition-colors duration-300 hover:bg-opacity-20 hover:bg-black" href="/">Veiled</a>
            </div>
            <form
                action=""
                method="post"
                class="flex md:flex-1 flex-col items-center justify-center w-full bg-slate-50"
            >
                <div class="md:mb-8 w-full md:flex-1 justify-center flex bg-slate-950 text-white items-center py-4 px-16 leading-none border-b-2 border-b-slate-400">
                    <a href="/" class="md:hidden text-2xl lg:text-4xl font-title font-extrabold">Veiled</a>
                    <span class="md:hidden text-2xl font-light text-stone-600">|</span>
                    <h1 class="text-blue-300 md:text-4xl md:w-full font-bold font-title">Sign up</h1>
                </div>
                
                <label
                    for="first-name"
                    class="md:my-4 h-16 w-full md:grid md:w-96 md:max-w-full md:flex-none"
                >
                    <span class="hidden text-stone-600 md:inline-block">First name:</span>

                    <input class="border-b border-b-stone-200 md:rounded-md
                    place-self-center md:placeholder:text-transparent
                    md:border-2 md:border-stone-200 px-4 md:w-96 w-full h-full
                    md:h-12 transition-colors hover:border-stone-200
                    focus:outline-none focus:bg-slate-200
                    md:focus:bg-white md:focus:border-blue-400"
                    type="text" 
                    name="first_name" 
                    id="first-name"
                    placeholder="First name" 
                    value="<%= formData ? formData.first_name :
                    "" %>" required />
                </label>

                <label
                    for="second-name"
                    class="md:my-4 h-16 w-full md:grid md:w-96 md:max-w-full md:flex-none"
                >
                    <span class="hidden text-stone-600 md:inline-block"
                    >Second name:</span>
                    <input class="border-b border-b-stone-200 md:rounded-md
                    place-self-center md:placeholder:text-transparent
                    md:border-2 md:border-stone-200 px-4 md:w-96 w-full h-full
                    md:h-12 transition-colors hover:border-stone-200
                    focus:outline-none focus:bg-slate-200
                    md:focus:bg-white md:focus:border-blue-400" type="text"
                    name="second_name" id="second-name" placeholder="Second name"
                    value="<%=formData ? formData.second_name : "" %>"
                    required />
                </label>

                <label
                    for="username"
                    class="md:my-4 h-16 w-full md:grid md:w-96 md:max-w-full md:flex-none"
                >
                    <span class="hidden text-stone-600 md:inline-block">Username (Email):</span>
                    <input class="border-b border-b-stone-200 md:rounded-md
                    place-self-center md:placeholder:text-transparent
                    md:border-2 md:border-stone-200 px-4 md:w-96 w-full h-full
                    md:h-12 transition-colors hover:border-stone-200
                    focus:outline-none focus:bg-slate-200
                    md:focus:bg-white md:focus:border-blue-400" type="text"
                    name="username" id="username" placeholder="Username (email)"
                    value="<%=formData ? formData.username : "" %>" required />
                </label>

                <label
                    for="password"
                    class="md:my-4 h-16 w-full md:grid md:w-96 md:max-w-full md:flex-none"
                >
                    <span class="hidden text-stone-600 md:inline-block">Password:</span>
                    <input class="border-b border-b-stone-200 md:rounded-md
                    place-self-center md:placeholder:text-transparent
                    md:border-2 md:border-stone-200 px-4 md:w-96 w-full h-full
                    md:h-12 transition-colors hover:border-stone-200
                    focus:outline-none focus:bg-slate-200
                    md:focus:bg-white md:focus:border-blue-400"
                        type="password"
                        name="password"
                        id="password"
                        placeholder="Password"
                        required
                    />
                </label>

                <label
                    for="confirm-password"
                    class="md:my-4 h-16 w-full md:grid md:w-96 md:max-w-full md:flex-none"
                >
                <span class="hidden text-stone-600 md:inline-block">Confirm Password:</span>
                <input 
                    class="border-b border-b-stone-200 md:rounded-md
                    place-self-center md:placeholder:text-transparent
                    md:border-2 md:border-stone-200 px-4 md:w-96 w-full h-full
                    md:h-12 transition-colors hover:border-stone-200
                    focus:outline-none focus:bg-slate-200
                    md:focus:bg-white md:focus:border-blue-400"
                    type="password"
                    name="confirm_password"
                    id="confirm-password"
                    placeholder="Confirm password"
                    required
                />
                </label>

                <div class="flex-1 md:mt-4 overflow-y-auto">
                    <% if (errors) { %>
                        <% for (const error of errors.array()) { %>
                            <p class="w-full text-xs p-2 px-4 text-red-900">
                                <%= error.msg %>
                            </p>
                        <% } %>
                    <% } %>
                </div>
                <p
                class="hidden w-full gap-2 px-4 text-stone-600 md:mt-2 md:mb-4 md:flex lg:px-16"
                >
                Already a user?
                    <a
                    class="text-blue-500 hover:text-blue-600 hover:underline"
                    href="/login"
                    >
                    Log in
                    </a>
                </p>
                <div class="flex w-full md:justify-center md:gap-4">
                    <button
                        class="h-16 flex-1 bg-green-700 px-4 font-bold
                        text-slate-100 transition-colors hover:bg-green-800
                        md:relative md:h-12 md:w-36 md:flex-none md:mb-8"
                    >
                        Sign up
                    </button>
                    <a 
                    href="/"
                    class="h-16 flex-1 flex justify-center items-center 
                    bg-red-600 px-4 font-bold
                    text-slate-100 transition-colors hover:bg-red-700
                    md:relative md:h-12 md:w-36 md:flex-none md:mb-8"
                    >
                        Cancel sign up
                    </a>
                </div>
            </form>
        </main>
    </body>
</html>
